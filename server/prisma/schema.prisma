generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  username  String      @unique
  password  String      // Hashed
  createdAt DateTime    @default(now())
  scores    Score[]
  memberships RoomMember[]
}

model Score {
  id        String   @id @default(uuid())
  score     Float    // Generic value (ms, level, etc)
  category  String   // 'REACTION_TIME', 'SEQUENCE', 'AIM'
  rawStats  Json?    // Detailed stats
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  roomId    String?
  room      Room?    @relation(fields: [roomId], references: [id])
  createdAt DateTime @default(now())
}

model Room {
  id        String       @id @default(uuid())
  code      String       @unique
  hostId    String
  members   RoomMember[]
  scores    Score[]
  createdAt DateTime     @default(now())
}

model RoomMember {
  id        String   @id @default(uuid())
  userId    String
  roomId    String
  isAdmin   Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id])
  joinedAt  DateTime @default(now())

  @@unique([userId, roomId])
}
